<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">

        <!-- JPA 구현체 -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- 엔티티 클래스 (자동 스캔 안 쓸 경우 명시) -->
        <!--
        <class>com.example.entity.User</class>
        <class>com.example.entity.Order</class>
        -->

        <!--기본적으로 엔티티 스캔이 꺼져있음 엔티티 클래스 명시 해줘야함-->
        <class>com.java.javaplayground.jpa.ch2.entity.Sample</class>
        <class>com.java.javaplayground.jpa.test.Test</class>
        <class>com.java.javaplayground.jpa.test.TestChild</class>

        <properties>
            <!-- JDBC 설정 -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3737/mydb?serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>

            <!-- Hibernate 설정 -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>

            <!-- 트랜잭션 -->
            <property name="hibernate.connection.autocommit" value="false"/>

            <!-- 캐시 (선택) -->
            <!--
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            -->
        </properties>

    </persistence-unit>
</persistence>
